<h6> Minha 'partial _pool' que foi renderizada pelo index !</h6>
<br>
<div id="pool-container">
  <%# if @pool.opened? %>
    <h2 class="text-4xl font-bold mb-10">
      Pared√£o das Linguagens: Vote para eliminar. <%= @pool_options.pluck(:name).to_sentence last_word_connector: ' ou ' %>?
    </h2>

  <div class="flex flex-col gap-4">
    <% @pool_options.each do |option| %>
      <%= button_to vote_path, method: :post, class: 'flex-grow flex items-center border border-gray-600 p-4 text-left', form_class: 'flex w-100', params: { pool_option_id: option.id } do %>
        <h3 class="text-2xl font-bold text-slate-800 flex-grow"><%= option.name %></h3>
        <%# Utilize option.photo if available, fallback to placeholder image %>
        <%= image_tag option.photo.try(:url) || "java.png", class: 'h-16 w-16 object-contain', alt: '' %>
      <% end %>
    <% end %>
  </div>
  <%# end %>
</div>
